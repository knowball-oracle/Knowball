@using Knowball.UI.ViewModels
@model List<PartidaViewModel>

@{
    ViewData["Title"] = "Partidas";
}

<div class="container-fluid mt-4">
    <div class="row mb-4">
        <div class="col-md-8">
            <h1><i class="bi bi-calendar-event"></i> Gerenciar Partidas</h1>
        </div>
        <div class="col-md-4 text-end">
            <a asp-action="Create" class="btn btn-success">
                <i class="bi bi-plus-circle"></i> Nova Partida
            </a>
        </div>
    </div>

    @if (Model == null || Model.Count == 0)
    {
        <div class="alert alert-info">
            <i class="bi bi-info-circle"></i> Nenhuma partida cadastrada.
            <a asp-action="Create">Clique aqui</a> para criar uma nova.
        </div>
    }
    else
    {
        <div class="table-responsive">
            <table class="table table-hover table-striped">
                <thead class="table-success">
                    <tr>
                        <th>ID</th>
                        <th>Data/Hora</th>
                        <th>Local</th>
                        <th>Campeonato</th>
                        <th>Equipes</th>
                        <th>Placar</th>
                        <th style="width: 150px;">Ações</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.IdPartida</td>
                            <td>@item.DataPartida.ToString("dd/MM/yyyy HH:mm")</td>
                            <td>@item.Local</td>
                            <td>@item.NomeCampeonato</td>
                            <td>
                                <span class="badge bg-info">@item.NomeEquipe1</span>
                                <i class="bi bi-arrow-left-right"></i>
                                <span class="badge bg-warning">@item.NomeEquipe2</span>
                            </td>
                            <td>
                                <strong>@item.PlacarMandante x @item.PlacarVisitante</strong>
                            </td>
                            <td>
                                <a asp-action="Edit" asp-route-id="@item.IdPartida" class="btn btn-sm btn-warning">
                                    <i class="bi bi-pencil"></i> Editar
                                </a>
                                <a asp-action="Delete" asp-route-id="@item.IdPartida" class="btn btn-sm btn-danger">
                                    <i class="bi bi-trash"></i> Deletar
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>
