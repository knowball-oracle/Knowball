@using Knowball.UI.ViewModels
@model ParticipacaoViewModel

@{
    ViewData["Title"] = "Remover Participação";
}

<style>
    :root {
        --bg-primary: #0f1419;
        --bg-secondary: #1a1d24;
        --bg-card: #1e2329;
        --accent-primary: #00d9a3;
        --text-primary: #e8e9ed;
        --text-secondary: #a0a4b8;
        --border-color: rgba(255, 255, 255, 0.08);
        --danger-color: #ff4757;
        --danger-glow: rgba(255, 71, 87, 0.15);
        --info-color: #4dabf7;
        --info-glow: rgba(77, 171, 247, 0.15);
    }

    body {
        background-color: var(--bg-primary);
        color: var(--text-primary);
    }

    .page-header {
        background: linear-gradient(135deg, var(--bg-secondary) 0%, var(--bg-card) 100%);
        border: 1px solid var(--border-color);
        border-radius: 16px;
        padding: 32px;
        margin-bottom: 32px;
        box-shadow: 0 4px 16px rgba(0, 0, 0, 0.5);
    }

        .page-header h1 {
            color: var(--text-primary);
            font-weight: 700;
            font-size: 2rem;
            margin: 0;
            display: flex;
            align-items: center;
            gap: 12px;
        }

            .page-header h1 i {
                color: var(--danger-color);
                filter: drop-shadow(0 0 8px var(--danger-glow));
            }

    .card {
        background: linear-gradient(145deg, var(--bg-card) 0%, var(--bg-secondary) 100%);
        border: 1px solid var(--danger-color);
        border-radius: 16px;
        box-shadow: 0 8px 32px rgba(255, 71, 87, 0.2), 0 4px 16px rgba(0, 0, 0, 0.6);
        overflow: hidden;
    }

    .card-header {
        background: linear-gradient(135deg, var(--danger-color) 0%, #e84057 100%);
        border-bottom: none;
        padding: 20px 24px;
    }

        .card-header h5 {
            margin: 0;
            font-weight: 700;
            font-size: 1.25rem;
            display: flex;
            align-items: center;
            gap: 10px;
            color: white;
        }

    .card-body {
        padding: 32px 24px;
    }

    .alert-info {
        background: linear-gradient(135deg, var(--info-glow) 0%, rgba(77, 171, 247, 0.05) 100%);
        border: 1px solid var(--info-color);
        border-radius: 10px;
        color: var(--text-primary);
        padding: 20px;
        margin: 24px 0;
    }

        .alert-info strong {
            color: var(--info-color);
            font-weight: 700;
            margin-right: 8px;
        }

    .text-muted {
        color: var(--text-secondary) !important;
        font-size: 0.95rem;
        font-style: italic;
        margin: 20px 0;
    }

    .btn-danger {
        background: linear-gradient(135deg, var(--danger-color) 0%, #e84057 100%);
        border: none;
        color: white;
        font-weight: 600;
        padding: 12px 28px;
        border-radius: 10px;
        transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
        box-shadow: 0 4px 12px rgba(255, 71, 87, 0.3);
        letter-spacing: 0.5px;
    }

        .btn-danger:hover {
            background: linear-gradient(135deg, #ff6b7a 0%, var(--danger-color) 100%);
            transform: translateY(-2px);
            box-shadow: 0 6px 20px rgba(255, 71, 87, 0.5);
            color: white;
        }

    .btn-secondary {
        background-color: var(--bg-secondary);
        border: 1px solid var(--border-color);
        color: var(--text-secondary);
        font-weight: 600;
        padding: 12px 28px;
        border-radius: 10px;
        transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    }

        .btn-secondary:hover {
            background-color: var(--bg-card);
            border-color: var(--text-secondary);
            color: var(--text-primary);
            transform: translateY(-2px);
        }

    .confirmation-text {
        color: var(--text-primary);
        font-size: 1.1rem;
        margin-bottom: 20px;
        font-weight: 500;
    }

    .action-buttons {
        display: flex;
        gap: 12px;
        margin-top: 24px;
    }
</style>

<div class="container mt-4">
    <div class="page-header">
        <h1><i class="bi bi-exclamation-triangle"></i> Confirmar Remoção</h1>
    </div>

    <div class="row">
        <div class="col-md-6 offset-md-3">
            <div class="card">
                <div class="card-header">
                    <h5><i class="bi bi-trash"></i> Remover Participação</h5>
                </div>
                <div class="card-body">
                    <p class="confirmation-text">Tem certeza de que deseja remover esta participação?</p>

                    <div class="alert alert-info">
                        <div><strong>Equipe:</strong> @Model.NomeEquipe (@Model.CidadeEquipe)</div>
                        <div><strong>Partida:</strong> @Model.LocalPartida</div>
                        <div><strong>Tipo:</strong> @Model.Tipo</div>
                        <div><strong>Data:</strong> @Model.DataPartida</div>
                    </div>

                    <p class="text-muted"><i class="bi bi-info-circle"></i> Esta ação não pode ser desfeita!</p>

                    <div class="action-buttons">
                        <form asp-action="Delete" method="post" style="display:inline;">
                            <input type="hidden" asp-for="IdPartida" />
                            <input type="hidden" asp-for="IdEquipe" />
                            <button type="submit" class="btn btn-danger">
                                <i class="bi bi-trash"></i> Remover Participação
                            </button>
                        </form>
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="bi bi-x-circle"></i> Cancelar
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
