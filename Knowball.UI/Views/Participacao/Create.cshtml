@using Knowball.UI.ViewModels
@model ParticipacaoViewModel

@{
    ViewData["Title"] = "Criar Nova Participação";
    var partidas = ViewBag.Partidas as List<PartidaViewModel>;
    var equipes = ViewBag.Equipes as List<EquipeViewModel>;
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card">
                <div class="card-header bg-success text-white">
                    <h5><i class="bi bi-plus-circle"></i> Criar Nova Participação</h5>
                </div>
                <div class="card-body">
                    <form asp-action="Create" method="post">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                        <div class="mb-3">
                            <label asp-for="IdPartida" class="form-label"></label>
                            <select asp-for="IdPartida" class="form-select">
                                <option value="">-- Selecione uma partida --</option>
                                @if (partidas != null)
                                {
                                    @foreach (var p in partidas)
                                    {
                                        <option value="@p.IdPartida">@p.Local - @p.DataPartida.ToString("dd/MM/yyyy HH:mm")</option>
                                    }
                                }
                            </select>
                            <span asp-validation-for="IdPartida" class="text-danger"></span>
                        </div>

                        <div class="mb-3">S
                            <label asp-for="IdEquipe" class="form-label"></label>
                            <select asp-for="IdEquipe" class="form-select">
                                <option value="">-- Selecione uma equipe --</option>
                                @if (equipes != null)
                                {
                                    @foreach (var e in equipes)
                                    {
                                        <option value="@e.IdEquipe">@e.Nome (@e.Cidade - @e.Estado)</option>
                                    }
                                }
                            </select>
                            <span asp-validation-for="IdEquipe" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Tipo" class="form-label"></label>
                            <select asp-for="Tipo" class="form-select">
                                <option value="">-- Selecione o tipo --</option>
                                <option value="Mandante">Mandante</option>
                                <option value="Visitante">Visitante</option>
                            </select>
                            <span asp-validation-for="Tipo" class="text-danger"></span>
                        </div>

                        <div class="d-flex gap-2">
                            <button type="submit" class="btn btn-success">
                                <i class="bi bi-save"></i> Salvar
                            </button>
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="bi bi-x-circle"></i> Cancelar
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
