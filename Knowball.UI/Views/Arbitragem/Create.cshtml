@using Knowball.UI.ViewModels
@model ArbitragemViewModel

@{
    ViewData["Title"] = "Criar Nova Arbitragem";
    var partidas = ViewBag.Partidas as List<PartidaViewModel>;
    var arbitros = ViewBag.Arbitros as List<ArbitroViewModel>;
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card">
                <div class="card-header bg-success text-white">
                    <h5><i class="bi bi-plus-circle"></i> Criar Nova Arbitragem</h5>
                </div>
                <div class="card-body">
                    <form asp-action="Create" method="post">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                        <div class="mb-3">
                            <label asp-for="IdPartida" class="form-label"></label>
                            <select asp-for="IdPartida" class="form-select">
                                <option value="">-- Selecione uma partida --</option>
                                @if (partidas != null)
                                {
                                    @foreach (var p in partidas)
                                    {
                                        <option value="@p.IdPartida">@p.Local - @p.DataPartida.ToString("dd/MM/yyyy HH:mm")</option>
                                    }
                                }
                            </select>
                            <span asp-validation-for="IdPartida" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="IdArbitro" class="form-label"></label>
                            <select asp-for="IdArbitro" class="form-select">
                                <option value="">-- Selecione um árbitro --</option>
                                @if (arbitros != null)
                                {
                                    @foreach (var a in arbitros)
                                    {
                                        <option value="@a.IdArbitro">@a.Nome</option>
                                    }
                                }
                            </select>
                            <span asp-validation-for="IdArbitro" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Funcao" class="form-label"></label>
                            <select asp-for="Funcao" class="form-select">
                                <option value="">-- Selecione a função --</option>
                                <option value="Principal">Principal</option>
                                <option value="Assistente 1">Assistente 1</option>
                                <option value="Assistente 2">Assistente 2</option>
                                <option value="Quarto Árbitro">Quarto Árbitro</option>
                            </select>
                            <span asp-validation-for="Funcao" class="text-danger"></span>
                        </div>

                        <div class="d-flex gap-2">
                            <button type="submit" class="btn btn-success">
                                <i class="bi bi-save"></i> Salvar
                            </button>
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="bi bi-x-circle"></i> Cancelar
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
