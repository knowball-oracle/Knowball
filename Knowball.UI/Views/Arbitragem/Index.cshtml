@using Knowball.UI.ViewModels
@model List<ArbitragemViewModel>

@{
    ViewData["Title"] = "Arbitragens";
}

<div class="container-fluid mt-4">
    <div class="row mb-4">
        <div class="col-md-8">
            <h1><i class="bi bi-clipboard-check"></i> Gerenciar Arbitragens</h1>
        </div>
        <div class="col-md-4 text-end">
            <a asp-action="Create" class="btn btn-success">
                <i class="bi bi-plus-circle"></i> Nova Arbitragem
            </a>
        </div>
    </div>

    @if (Model == null || Model.Count == 0)
    {
        <div class="alert alert-info">
            <i class="bi bi-info-circle"></i> Nenhuma arbitragem cadastrada.
            <a asp-action="Create">Clique aqui</a> para criar uma nova.
        </div>
    }
    else
    {
        <div class="table-responsive">
            <table class="table table-hover table-striped">
                <thead class="table-success">
                    <tr>
                        <th>Partida</th>
                        <th>Árbitro</th>
                        <th>Função</th>
                        <th>Data/Hora</th>
                        <th style="width: 150px;">Ações</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.LocalPartida (@item.DataPartida)</td>
                            <td>@item.NomeArbitro</td>
                            <td>@item.Funcao</td>
                            <td>@item.DataPartida</td>
                            <td>
                                <a asp-action="Delete" asp-route-idPartida="@item.IdPartida"
                                   asp-route-idArbitro="@item.IdArbitro" class="btn btn-sm btn-danger">
                                    <i class="bi bi-trash"></i> Remover
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>
