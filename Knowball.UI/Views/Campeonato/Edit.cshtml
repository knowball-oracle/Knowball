@using Knowball.UI.ViewModels
@model CampeonatoViewModel

@{
    ViewData["Title"] = "Editar Campeonato";
}

<style>
    /* Mantenha todo o CSS existente */
    :root {
        --bg-primary: #0f1419;
        --bg-secondary: #1a1d24;
        --bg-card: #1e2329;
        --text-primary: #e8e9ed;
        --text-secondary: #a0a4b8;
        --border-color: rgba(255, 255, 255, 0.08);
        --warning-color: #ffd93d;
        --warning-glow: rgba(255, 217, 61, 0.15);
        --danger-color: #ff4757;
    }

    body {
        background-color: var(--bg-primary);
        color: var(--text-primary);
    }

    .page-header {
        background: linear-gradient(135deg, var(--bg-secondary) 0%, var(--bg-card) 100%);
        border: 1px solid var(--border-color);
        border-radius: 16px;
        padding: 32px;
        margin-bottom: 32px;
        box-shadow: 0 4px 16px rgba(0, 0, 0, 0.5);
    }

        .page-header h1 {
            color: var(--text-primary);
            font-weight: 700;
            font-size: 2rem;
            margin: 0;
            display: flex;
            align-items: center;
            gap: 12px;
        }

            .page-header h1 i {
                color: var(--warning-color);
                filter: drop-shadow(0 0 8px var(--warning-glow));
            }

    .card {
        background: linear-gradient(145deg, var(--bg-card) 0%, var(--bg-secondary) 100%);
        border: 1px solid var(--border-color);
        border-radius: 16px;
        box-shadow: 0 8px 32px rgba(0, 0, 0, 0.6);
        overflow: hidden;
    }

    .card-header {
        background: linear-gradient(135deg, var(--warning-color) 0%, #fcc419 100%);
        border-bottom: none;
        padding: 20px 24px;
    }

        .card-header h5 {
            margin: 0;
            font-weight: 700;
            font-size: 1.25rem;
            display: flex;
            align-items: center;
            gap: 10px;
            color: #0f1419;
        }

    .card-body {
        padding: 32px 24px;
    }

    .form-label {
        color: var(--text-primary);
        font-weight: 600;
        margin-bottom: 8px;
        font-size: 0.95rem;
        letter-spacing: 0.5px;
    }

    .form-control,
    .form-select {
        background-color: var(--bg-secondary);
        border: 1px solid var(--border-color);
        border-radius: 10px;
        color: var(--text-primary);
        padding: 12px 16px;
        transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    }

        .form-control:focus,
        .form-select:focus {
            background-color: var(--bg-card);
            border-color: var(--warning-color);
            box-shadow: 0 0 0 3px var(--warning-glow);
            color: var(--text-primary);
        }

        .form-select option {
            background-color: var(--bg-secondary);
            color: var(--text-primary);
        }

    .btn-warning {
        background: linear-gradient(135deg, var(--warning-color) 0%, #fcc419 100%);
        border: none;
        color: #0f1419;
        font-weight: 600;
        padding: 12px 28px;
        border-radius: 10px;
        transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
        box-shadow: 0 4px 12px rgba(255, 217, 61, 0.3);
        letter-spacing: 0.5px;
    }

        .btn-warning:hover {
            background: linear-gradient(135deg, #ffe066 0%, var(--warning-color) 100%);
            transform: translateY(-2px);
            box-shadow: 0 6px 20px rgba(255, 217, 61, 0.5);
            color: #0f1419;
        }

    .btn-secondary {
        background-color: var(--bg-secondary);
        border: 1px solid var(--border-color);
        color: var(--text-secondary);
        font-weight: 600;
        padding: 12px 28px;
        border-radius: 10px;
        transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    }

        .btn-secondary:hover {
            background-color: var(--bg-card);
            border-color: var(--text-secondary);
            color: var(--text-primary);
            transform: translateY(-2px);
        }

    .text-danger {
        color: var(--danger-color) !important;
        font-size: 0.875rem;
        margin-top: 4px;
        display: block;
    }

    .alert-danger {
        background: linear-gradient(135deg, rgba(255, 71, 87, 0.1) 0%, rgba(255, 71, 87, 0.05) 100%);
        border: 1px solid var(--danger-color);
        border-radius: 10px;
        color: var(--danger-color);
        padding: 16px;
        margin-bottom: 24px;
    }

    .d-flex.gap-2 {
        gap: 12px;
    }
</style>

<div class="container mt-4">
    <div class="page-header">
        <h1><i class="bi bi-pencil"></i> Editar Campeonato</h1>
    </div>

    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card">
                <div class="card-header">
                    <h5><i class="bi bi-trophy"></i> Atualizar Informações do Campeonato</h5>
                </div>
                <div class="card-body">
                    <!-- CORREÇÃO AQUI: Adicionado asp-route-id -->
                    <form asp-action="Edit" asp-route-id="@Model.IdCampeonato" method="post">
                        <input type="hidden" asp-for="IdCampeonato" />
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                        <div class="mb-3">
                            <label asp-for="Nome" class="form-label">Nome do Campeonato</label>
                            <input asp-for="Nome" class="form-control">
                            <span asp-validation-for="Nome" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Ano" class="form-label">Ano</label>
                            <input asp-for="Ano" type="number" class="form-control">
                            <span asp-validation-for="Ano" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Categoria" class="form-label">Categoria</label>
                            <select asp-for="Categoria" class="form-select">
                                <option value="">-- Selecione uma categoria --</option>
                                <option value="Sub-15">Sub-15</option>
                                <option value="Sub-17">Sub-17</option>
                                <option value="Sub-20">Sub-20</option>
                                <option value="Profissional">Profissional</option>
                                <option value="Amador">Amador</option>
                            </select>
                            <span asp-validation-for="Categoria" class="text-danger"></span>
                        </div>

                        <div class="d-flex gap-2 mt-4">
                            <button type="submit" class="btn btn-warning">
                                <i class="bi bi-save"></i> Atualizar
                            </button>
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="bi bi-x-circle"></i> Cancelar
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
