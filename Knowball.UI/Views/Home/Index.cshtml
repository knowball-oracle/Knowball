@{
    ViewData["Title"] = "Dashboard - Knowball";
    var totalCampeonatos = ViewBag.TotalCampeonatos ?? 0;
    var totalEquipes = ViewBag.TotalEquipes ?? 0;
    var totalArbitros = ViewBag.TotalArbitros ?? 0;
    var totalPartidas = ViewBag.TotalPartidas ?? 0;
}

<style>
    :root {
        --bg-primary: #0f1419;
        --bg-secondary: #1a1d24;
        --bg-tertiary: #242830;
        --bg-card: #1e2329;
        --accent-primary: #00d9a3;
        --accent-secondary: #00b386;
        --accent-glow: rgba(0, 217, 163, 0.15);
        --text-primary: #e8e9ed;
        --text-secondary: #a0a4b8;
        --text-muted: #6b7280;
        --border-color: rgba(255, 255, 255, 0.08);
        --shadow-sm: 0 2px 8px rgba(0, 0, 0, 0.4);
        --shadow-md: 0 4px 16px rgba(0, 0, 0, 0.5);
        --shadow-lg: 0 8px 32px rgba(0, 0, 0, 0.6);
    }

    body {
        background-color: var(--bg-primary);
        color: var(--text-primary);
    }

    .container-fluid {
        padding: 24px;
    }

    .hero-section {
        background: linear-gradient(135deg, #1a1d24 0%, #0f1419 100%);
        border: 1px solid var(--border-color);
        border-radius: 16px;
        padding: 60px 32px;
        text-align: center;
        margin-bottom: 48px;
        position: relative;
        overflow: hidden;
        box-shadow: var(--shadow-lg);
    }

        .hero-section::before {
            content: '';
            position: absolute;
            top: -50%;
            left: -50%;
            width: 200%;
            height: 200%;
            background: radial-gradient(circle, var(--accent-glow) 0%, transparent 70%);
            animation: pulse 8s ease-in-out infinite;
            pointer-events: none;
        }

    @@keyframes pulse {
        0%, 100% {
            opacity: 0.3;
            transform: scale(1);
        }

        50% {
            opacity: 0.6;
            transform: scale(1.1);
        }
    }

    .hero-section h1 {
        font-size: 3.5rem;
        font-weight: 800;
        margin-bottom: 16px;
        background: linear-gradient(135deg, var(--accent-primary) 0%, #00ffc8 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
        position: relative;
        z-index: 1;
    }

    .hero-section p {
        font-size: 1.15rem;
        color: var(--text-secondary);
        line-height: 1.7;
        margin-bottom: 20px;
        max-width: 900px;
        margin-left: auto;
        margin-right: auto;
        position: relative;
        z-index: 1;
    }

    .stat-card {
        background: linear-gradient(135deg, var(--bg-card) 0%, var(--bg-secondary) 100%);
        border: 1px solid var(--border-color);
        border-radius: 16px;
        padding: 32px 24px;
        text-align: center;
        box-shadow: var(--shadow-md);
        transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
        position: relative;
        overflow: hidden;
    }

        .stat-card::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            height: 3px;
            background: linear-gradient(90deg, var(--accent-primary), #00ffc8, var(--accent-primary));
            background-size: 200% 100%;
            animation: shimmer 3s linear infinite;
            opacity: 0;
            transition: opacity 0.4s;
        }

    @@keyframes shimmer {
        0% {
            background-position: -200% 0;
        }

        100% {
            background-position: 200% 0;
        }
    }

    .stat-card:hover {
        transform: translateY(-8px) scale(1.02);
        box-shadow: 0 12px 40px rgba(0, 217, 163, 0.25), var(--shadow-lg);
        border-color: var(--accent-primary);
    }

        .stat-card:hover::before {
            opacity: 1;
        }

    .stat-card i {
        font-size: 2.5rem;
        color: var(--accent-primary);
        margin-bottom: 16px;
        display: block;
        filter: drop-shadow(0 0 12px var(--accent-glow));
    }

    .stat-card h3 {
        color: var(--text-primary);
        font-size: 3rem;
        font-weight: 700;
        margin: 12px 0 8px;
        letter-spacing: -1px;
    }

    .stat-card p {
        color: var(--text-secondary);
        font-size: 1rem;
        font-weight: 500;
        text-transform: uppercase;
        letter-spacing: 1px;
        margin: 0;
    }

    .feature-card {
        background: linear-gradient(145deg, var(--bg-card) 0%, var(--bg-secondary) 100%);
        border: 1px solid var(--border-color);
        border-radius: 16px;
        padding: 32px 24px;
        text-align: center;
        box-shadow: var(--shadow-sm);
        transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
        height: 100%;
        position: relative;
        overflow: hidden;
    }

        .feature-card::after {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            width: 4px;
            height: 100%;
            background: linear-gradient(180deg, var(--accent-primary), #00ffc8);
            opacity: 0;
            transition: opacity 0.4s;
        }

        .feature-card:hover {
            transform: translateY(-12px);
            box-shadow: 0 16px 48px rgba(0, 217, 163, 0.2), var(--shadow-lg);
            border-color: var(--accent-primary);
        }

            .feature-card:hover::after {
                opacity: 1;
            }

        .feature-card i {
            font-size: 3.5rem;
            color: var(--accent-primary);
            margin-bottom: 20px;
            display: block;
            filter: drop-shadow(0 4px 16px var(--accent-glow));
            transition: transform 0.4s;
        }

        .feature-card:hover i {
            transform: scale(1.1);
        }

        .feature-card h5 {
            color: var(--text-primary);
            font-weight: 700;
            font-size: 1.25rem;
            margin-bottom: 12px;
            letter-spacing: 0.5px;
        }

        .feature-card p {
            color: var(--text-secondary);
            font-size: 0.95rem;
            line-height: 1.6;
            margin-bottom: 20px;
        }

    /* BOTÕES ATUALIZADOS - MENORES E MAIS COMPACTOS */
    .btn-success {
        background: linear-gradient(135deg, var(--accent-primary) 0%, var(--accent-secondary) 100%);
        border: none;
        color: #0f1419;
        font-weight: 600;
        padding: 8px 20px;
        font-size: 0.9rem;
        border-radius: 8px;
        transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
        box-shadow: 0 4px 12px rgba(0, 217, 163, 0.3);
        letter-spacing: 0.5px;
        display: inline-flex;
        align-items: center;
        gap: 6px;
    }

        .btn-success:hover {
            background: linear-gradient(135deg, #00ffc8 0%, var(--accent-primary) 100%);
            transform: translateY(-2px);
            box-shadow: 0 6px 20px rgba(0, 217, 163, 0.5);
            color: #0f1419;
        }

        .btn-success.btn-sm {
            padding: 6px 16px;
            font-size: 0.85rem;
        }

    .btn-outline-success {
        background: transparent;
        border: 2px solid var(--accent-primary);
        color: var(--accent-primary);
        font-weight: 600;
        padding: 10px 24px;
        font-size: 0.95rem;
        border-radius: 10px;
        transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
        position: relative;
        overflow: hidden;
    }

        .btn-outline-success::before {
            content: '';
            position: absolute;
            top: 0;
            left: -100%;
            width: 100%;
            height: 100%;
            background: linear-gradient(135deg, var(--accent-primary) 0%, var(--accent-secondary) 100%);
            transition: left 0.4s;
            z-index: -1;
        }

        .btn-outline-success:hover {
            color: #0f1419;
            border-color: var(--accent-primary);
            transform: translateY(-2px);
            box-shadow: 0 6px 24px rgba(0, 217, 163, 0.4);
        }

            .btn-outline-success:hover::before {
                left: 0;
            }

        .btn-outline-success.btn-lg {
            padding: 12px 28px;
            font-size: 1rem;
        }

    .btn-icon {
        display: inline-flex;
        align-items: center;
        gap: 8px;
    }

    .section-title {
        text-align: center;
        font-size: 2.25rem;
        font-weight: 800;
        color: var(--text-primary);
        margin-bottom: 48px;
        position: relative;
        padding-bottom: 24px;
        letter-spacing: -0.5px;
    }

        .section-title::after {
            content: '';
            position: absolute;
            bottom: 0;
            left: 50%;
            transform: translateX(-50%);
            width: 80px;
            height: 4px;
            background: linear-gradient(90deg, transparent, var(--accent-primary), transparent);
            border-radius: 2px;
            box-shadow: 0 0 16px var(--accent-glow);
        }

        .section-title i {
            color: var(--accent-primary);
            margin-right: 12px;
            filter: drop-shadow(0 0 8px var(--accent-glow));
        }

    .quick-access {
        background: linear-gradient(135deg, var(--bg-secondary) 0%, var(--bg-tertiary) 100%);
        border: 1px solid var(--border-color);
        border-radius: 16px;
        padding: 40px 32px;
        margin-bottom: 48px;
        box-shadow: var(--shadow-md);
    }

        .quick-access h4 {
            color: var(--text-primary);
            font-weight: 700;
            font-size: 1.5rem;
            margin-bottom: 28px;
            letter-spacing: 0.5px;
        }

            .quick-access h4 i {
                color: var(--accent-primary);
                margin-right: 10px;
                filter: drop-shadow(0 0 8px var(--accent-glow));
            }

    .info-banner {
        background: linear-gradient(135deg, var(--bg-secondary) 0%, var(--bg-tertiary) 100%);
        border: 1px solid var(--accent-primary);
        border-radius: 16px;
        padding: 48px 32px;
        text-align: center;
        margin-top: 48px;
        box-shadow: 0 8px 32px rgba(0, 217, 163, 0.15), var(--shadow-lg);
        position: relative;
        overflow: hidden;
    }

        .info-banner::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            height: 2px;
            background: linear-gradient(90deg, transparent, var(--accent-primary), transparent);
        }

        .info-banner h3 {
            color: var(--text-primary);
            font-weight: 700;
            font-size: 1.75rem;
            margin-bottom: 20px;
            letter-spacing: 0.5px;
        }

            .info-banner h3 i {
                color: var(--accent-primary);
                margin-right: 12px;
                filter: drop-shadow(0 0 12px var(--accent-glow));
            }

        .info-banner p {
            color: var(--text-secondary);
            font-size: 1.1rem;
            line-height: 1.7;
            max-width: 800px;
            margin: 0 auto 16px;
        }

        .info-banner strong {
            color: var(--accent-primary);
            font-weight: 700;
            letter-spacing: 1px;
        }

    ::-webkit-scrollbar {
        width: 12px;
    }

    ::-webkit-scrollbar-track {
        background: var(--bg-primary);
    }

    ::-webkit-scrollbar-thumb {
        background: var(--bg-tertiary);
        border-radius: 6px;
        border: 2px solid var(--bg-primary);
    }

        ::-webkit-scrollbar-thumb:hover {
            background: var(--accent-primary);
        }

    @@keyframes fadeInUp {
        from {
            opacity: 0;
            transform: translateY(30px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    .stat-card, .feature-card {
        animation: fadeInUp 0.6s ease-out backwards;
    }

        .stat-card:nth-child(1) {
            animation-delay: 0.1s;
        }

        .stat-card:nth-child(2) {
            animation-delay: 0.2s;
        }

        .stat-card:nth-child(3) {
            animation-delay: 0.3s;
        }

        .stat-card:nth-child(4) {
            animation-delay: 0.4s;
        }

        .feature-card:nth-child(1) {
            animation-delay: 0.1s;
        }

        .feature-card:nth-child(2) {
            animation-delay: 0.2s;
        }

        .feature-card:nth-child(3) {
            animation-delay: 0.3s;
        }

        .feature-card:nth-child(4) {
            animation-delay: 0.4s;
        }

        .feature-card:nth-child(5) {
            animation-delay: 0.5s;
        }

        .feature-card:nth-child(6) {
            animation-delay: 0.6s;
        }

    @@media (max-width: 768px) {
        .hero-section h1 {
            font-size: 2.5rem;
        }

        .section-title {
            font-size: 1.75rem;
        }

        .stat-card h3 {
            font-size: 2.5rem;
        }
    }
</style>

<div class="container-fluid">
    <!-- Hero Section -->
    <div class="hero-section">
        <h1><i class="bi bi-trophy-fill"></i> Knowball</h1>
        <p>O Knowball busca resolver os desafios comuns encontrados na gestão e organização dos campeonatos e partidas esportivas, especialmente no futebol das categorias de base do futebol brasileiro masculino.</p>
        <p style="font-size: 1rem; opacity: 0.8;">Gerencie campeonatos, equipes, árbitros e partidas com facilidade</p>
    </div>

    <!-- Statistics Section -->
    <div class="mb-5">
        <h2 class="section-title"><i class="bi bi-graph-up"></i> Estatísticas Gerais</h2>
        <div class="row">
            <div class="col-md-3 col-sm-6 mb-4">
                <div class="stat-card">
                    <i class="bi bi-trophy"></i>
                    <h3>@totalCampeonatos</h3>
                    <p>Campeonatos</p>
                </div>
            </div>
            <div class="col-md-3 col-sm-6 mb-4">
                <div class="stat-card">
                    <i class="bi bi-people-fill"></i>
                    <h3>@totalEquipes</h3>
                    <p>Equipes</p>
                </div>
            </div>
            <div class="col-md-3 col-sm-6 mb-4">
                <div class="stat-card">
                    <i class="bi bi-person-badge"></i>
                    <h3>@totalArbitros</h3>
                    <p>Árbitros</p>
                </div>
            </div>
            <div class="col-md-3 col-sm-6 mb-4">
                <div class="stat-card">
                    <i class="bi bi-calendar-event"></i>
                    <h3>@totalPartidas</h3>
                    <p>Partidas</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Quick Access Section -->
    <div class="quick-access">
        <h4><i class="bi bi-lightning-fill"></i> Acesso Rápido</h4>
        <div class="row">
            <div class="col-md-4 mb-3">
                <a href="@Url.Action("Index", "Campeonato")" class="btn btn-outline-success btn-lg w-100">
                    <span class="btn-icon">
                        <i class="bi bi-trophy"></i>
                        Ver Campeonatos
                    </span>
                </a>
            </div>
            <div class="col-md-4 mb-3">
                <a href="@Url.Action("Create", "Partida")" class="btn btn-outline-success btn-lg w-100">
                    <span class="btn-icon">
                        <i class="bi bi-calendar-event"></i>
                        Nova Partida
                    </span>
                </a>
            </div>
            <div class="col-md-4 mb-3">
                <a href="@Url.Action("Index", "Denuncia")" class="btn btn-outline-success btn-lg w-100">
                    <span class="btn-icon">
                        <i class="bi bi-exclamation-triangle"></i>
                        Ver Denúncias
                    </span>
                </a>
            </div>
        </div>
    </div>

    <!-- Features Section -->
    <div class="mb-5">
        <h2 class="section-title"><i class="bi bi-star-fill"></i> Funcionalidades Principais</h2>
        <div class="row">
            <div class="col-md-4 mb-4">
                <div class="feature-card">
                    <i class="bi bi-trophy-fill"></i>
                    <h5>Campeonatos</h5>
                    <p>Crie e gerencie campeonatos de futebol com diferentes categorias e informações detalhadas.</p>
                    <a href="@Url.Action("Index", "Campeonato")" class="btn btn-success btn-sm">
                        <i class="bi bi-arrow-right"></i> Gerenciar
                    </a>
                </div>
            </div>
            <div class="col-md-4 mb-4">
                <div class="feature-card">
                    <i class="bi bi-people-fill"></i>
                    <h5>Equipes</h5>
                    <p>Registre equipes participantes com suas informações de localização e dados gerais.</p>
                    <a href="@Url.Action("Index", "Equipe")" class="btn btn-success btn-sm">
                        <i class="bi bi-arrow-right"></i> Gerenciar
                    </a>
                </div>
            </div>
            <div class="col-md-4 mb-4">
                <div class="feature-card">
                    <i class="bi bi-person-badge"></i>
                    <h5>Árbitros</h5>
                    <p>Gerencie árbitros cadastrados e acompanhe seu status e disponibilidade.</p>
                    <a href="@Url.Action("Index", "Arbitro")" class="btn btn-success btn-sm">
                        <i class="bi bi-arrow-right"></i> Gerenciar
                    </a>
                </div>
            </div>
            <div class="col-md-4 mb-4">
                <div class="feature-card">
                    <i class="bi bi-calendar-event"></i>
                    <h5>Partidas</h5>
                    <p>Registre partidas, equipes participantes, placares e informações do local.</p>
                    <a href="@Url.Action("Index", "Partida")" class="btn btn-success btn-sm">
                        <i class="bi bi-arrow-right"></i> Gerenciar
                    </a>
                </div>
            </div>
            <div class="col-md-4 mb-4">
                <div class="feature-card">
                    <i class="bi bi-diagram-3"></i>
                    <h5>Participações</h5>
                    <p>Registre participação de equipes nas partidas como mandante ou visitante.</p>
                    <a href="@Url.Action("Index", "Participacao")" class="btn btn-success btn-sm">
                        <i class="bi bi-arrow-right"></i> Gerenciar
                    </a>
                </div>
            </div>
            <div class="col-md-4 mb-4">
                <div class="feature-card">
                    <i class="bi bi-exclamation-triangle-fill"></i>
                    <h5>Denúncias</h5>
                    <p>Registre e acompanhe denúncias relacionadas às partidas e árbitros.</p>
                    <a href="@Url.Action("Index", "Denuncia")" class="btn btn-success btn-sm">
                        <i class="bi bi-arrow-right"></i> Gerenciar
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
